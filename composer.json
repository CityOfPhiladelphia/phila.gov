{
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "https://github.com/CityOfPhiladelphia/phila.gov-customization"
    },
    {
      "type": "vcs",
      "url": "https://github.com/CityOfPhiladelphia/phila.gov-theme"
    },
    {
      "type": "vcs",
      "url": "https://github.com/CityOfPhiladelphia/phila.gov-styles"
    }
  ],
  "require": {
    "johnpbloch/wordpress": "~4.0",
    "wpackagist-plugin/meta-box": "~4.3",
    "wpackagist-plugin/restrict-categories": "~2.6",
    "wpackagist-plugin/swiftype-search": "~1.1",
    "wpackagist-plugin/wordpress-importer": "~0.6",
    "wpackagist-plugin/wpfront-user-role-editor": "~2.1",
    "CityOfPhiladelphia/phila.gov-customization": "*",
    "CityOfPhiladelphia/phila.gov-theme": "*",
    "CityOfPhiladelphia/phila.gov-styles": "*"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "wp-content/themes/phila.gov-theme/{$name}": ["CityOfPhiladelphia/phila.gov-styles"]
    }
  }
}
