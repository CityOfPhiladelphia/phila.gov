{
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "wordpress",
        "type": "webroot",
        "version": "4.0.1",
        "dist": {
          "type": "tar",
          "url": "http://wordpress.org/wordpress-4.0.1.tar.gz"
        },
        "require" : {
          "fancyguy/webroot-installer": "~1.1"
        }
      }
    },
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "https://github.com/CityOfPhiladelphia/phila.gov-theme"
    }
  ],
  "require": {
    "wordpress": "~4.0",
    "wpackagist-plugin/pods": "~2.4",
    "wpackagist-plugin/restrict-categories": "~2.6",
    "wpackagist-plugin/wpfront-user-role-editor": "~2.1",
    "CityOfPhiladelphia/phila.gov-theme": "*"
  },
  "scripts": {
    "post-install-cmd": [
      "echo Installing phila.gov-styles in phila.gov-theme",
      "curl -sL https://github.com/CityOfPhiladelphia/phila.gov-styles/archive/0.0.1.tar.gz | tar xz -C wp-content/themes/phila.gov-theme --transform 's/[^\\/]*/phila.gov-styles/'"
    ]
  },
  "extra": {
    "webroot-dir": "wp",
    "webroot-package": "wordpress"
  }
}
