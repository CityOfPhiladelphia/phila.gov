{
  "name": "phila.gov-theme",
  "version": "0.16.10",
  "description": "A custom wordpress theme for phila.gov",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cp -R node_modules/font-awesome/fonts ./",
    "build:css": "node-sass --include-path node_modules/font-awesome/scss --include-path node_modules/phila-standards/src/sass --output-style compressed --source-map true css/scss/base.scss css/styles.css ",
    "build:js": "browserify js/dev/main.js -o js/phila-scripts.js",
    "postbuild": "postcss --use autoprefixer -b 'last 2 versions' < css/styles.css -o css/styles.css",
    "prod:js": "browserify js/dev/main.js | uglify-js -c > js/phila-scripts.min.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CityOfPhiladelphia/phila.gov-theme.git"
  },
  "keywords": [
    "theme"
  ],
  "author": "City of Philadelphia",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/CityOfPhiladelphia/phila.gov-theme/issues"
  },
  "homepage": "https://github.com/CityOfPhiladelphia/phila.gov-theme",
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "browserify": "^14.1.0",
    "browserify-shim": "^3.8.14",
    "node-sass": "^4.5.1",
    "postcss": "^6.0.1",
    "postcss-cli": "^4.0.0"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "jquery": "^3.2.1",
    "js-cookie": "^2.1.3",
    "list.js": "^1.5.0",
    "mustache": "^2.3.0",
    "phila-standards": "^0.7.0",
    "uglify-js": "^3.0.21"
  }
}
