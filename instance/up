#!/bin/bash

# Pull in variables from .env
source .env

# Easy reference for directory containing script
dir=`dirname "$0"`

user_data="file://$dir/user-data.sh"
[ "$PHILA_ENV" = "prod" ] && user_data="file://$dir/user-data-prod.sh"

echo "Provisioning instance."
instance_id=`aws ec2 run-instances --user-data $user_data --key-name $KEY_PAIR_NAME \
--instance-type t2.micro --associate-public-ip-address --image-id $AMI --subnet-id $SUBNET | \
grep '^INSTANCES' | cut -f8`

echo "Waiting for instance $instance_id to come online. This may take a few minutes."
while true; do
  echo -n "."
  sleep 5
  reachability=`aws ec2 describe-instance-status --instance-id=$instance_id | grep reachability | head -n1 | cut -f3`
  [ "$reachability" = "passed" ] && break
done
echo

echo "Setting instance environment variables."
ip=`aws ec2 describe-instances --instance-id=$instance_id | grep '^INSTANCES' | cut -f15`
ssh-keyscan $ip >> ~/.ssh/known_hosts 2> /dev/null
ssh ubuntu@$ip -i ~/.ssh/philagov.pem "cat > .ssh/environment" <<EOF
APP_ROOT=/home/ubuntu/phila.gov
WP_SITEURL=$WP_SITEURL
WP_HOME=$WP_HOME
EOF
